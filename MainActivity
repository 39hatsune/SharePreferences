import android.content.Context;
import android.content.Intent;
import android.content.SharedPreferences;
import android.support.v7.app.AppCompatActivity;
import android.os.Bundle;
import android.view.View;
import android.widget.Button;
import android.widget.CheckBox;
import android.widget.CompoundButton;
import android.widget.EditText;

public class MainActivity extends AppCompatActivity implements View.OnClickListener, CompoundButton.OnCheckedChangeListener {
    private EditText ed_username, ed_password;
    private CheckBox cb_remember, cb_login;
    private Button btn_zhuce;

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_main);
        initView();
        defaultMode();
    }

    private void defaultMode() {
        SharedPreferences sp = getSharedPreferences("zhiyuan", Context.MODE_PRIVATE);
        boolean login = sp.getBoolean("login", false);
        if (login) {
            Intent intent = new Intent(MainActivity.this, Main2Activity.class);
            startActivity(intent);
            finish();
        } else {
            //从表单中获取remember状态值
            boolean remember = sp.getBoolean("remember", false);
            //从表单中获取userName值
            String userName = sp.getString("userName", "");
            //判断remember状态值
            if (remember) {
                cb_remember.setChecked(true);
                ed_username.setText(userName);
            } else {
                cb_remember.setChecked(false);
            }
        }
    }

    private void initView() {
        ed_username = (EditText) findViewById(R.id.ed_username);
        ed_password = (EditText) findViewById(R.id.ed_password);
        cb_remember = (CheckBox) findViewById(R.id.cb_remember);
        cb_login = (CheckBox) findViewById(R.id.cb_login);
        btn_zhuce = (Button) findViewById(R.id.btn_zhuce);
        btn_zhuce.setOnClickListener(this);
        cb_remember.setOnCheckedChangeListener(this);
        cb_login.setOnCheckedChangeListener(this);
    }

    @Override
    public void onClick(View v) {
        //创建一个SharedPreferences对象
        //第一个参数是指表单的名字,第二个参数是表单的访问类型
        SharedPreferences sp = getSharedPreferences("zhiyuan", Context.MODE_PRIVATE);
        //获取editor对象,编辑器,让表单是可编辑状态
        SharedPreferences.Editor ed = sp.edit();
        //存储数据,以键值对的形式
        ed.putString("userName", ed_username.getText().toString());
        ed.putString("passWord", ed_password.getText().toString());
        //提交表单,不提交则存储失败
        ed.commit();
    }

    @Override
    public void onCheckedChanged(CompoundButton buttonView, boolean isChecked) {
        SharedPreferences sp = getSharedPreferences("zhiyuan", Context.MODE_PRIVATE);
        SharedPreferences.Editor ed = sp.edit();
        switch (buttonView.getId()) {
            case R.id.cb_remember:
                if (isChecked) {
                    ed.putBoolean("remember", true);
                } else {
                    ed.putBoolean("remember", false);
                }
                break;
            case R.id.cb_login:
                if (isChecked) {
                    ed.putBoolean("login", true);
                } else {
                    ed.putBoolean("login", false);
                }
                break;
        }
        ed.commit();
    }
}
